<div class="container text-center">
    <h3>Races: </h3>
    {{#each data}}
        <div class="raceblock">
            <h2>Race naam: {{this._id}}</h2>
            <p>Begonnen:
            {{#if this.isStarted}}
                <span>ja</span>
            {{else}}
            <span>nee</span>
            {{/if}}
            </p>
            {{#each this.waypoints}}
                <p>punten:</p>
                <table>
                    <thead>
                    <tr>
                        <th>naam</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>this</td>
                    </tr>
                    </tbody>
                </table>
            {{/each}}
        </div>
    {{/each}}
</div>
