<div class="container">
    <section class="content-header">
        <h1>
            Races
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-body">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>naam</th>
                        <th>Aan</th>
                        <th>opties</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>
                                {{#if this.isStarted}}
                                        ja
                                {{else}}
                                        nee
                                {{/if}}
                            </td>
                            <td>
                                <form action="/races/{{this._id}}">
                                    <input type="hidden" name="isStarted" value="true"/>
                                    <input type="submit" value="Ga naar Race" />
                                </form>
                            </td>
                         </tr>
                    {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </section>
</div>
